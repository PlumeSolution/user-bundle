<?xml version="1.0"?>
<ruleset name="Alzundaz coding standard">
    <description>Alzundaz coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2">
        <exclude name="Squiz.ControlStructures.ControlSignature"/>
    </rule>
    <rule ref="Generic.Functions.OpeningFunctionBraceBsdAllman"/>

    <!-- Paths to check -->
    <file>Controllers</file>
    <file>Credentials</file>
    <file>DependencyInjection</file>
    <file>Fields</file>
    <file>Form</file>
    <file>Models</file>
    <file>tests</file>
</ruleset>